{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "code_documentation_edits",
    "type": "object",
    "properties": {
      "path": {"type": "string"},
      "functions": {
        "type": "array",
        "items": { "$ref": "#/$defs/function" }
      },
      "classes": {
        "type": "array",
        "items": { "$ref": "#/$defs/class" }
      }
    },
    "required": ["path", "functions", "classes"],
    "additionalProperties": false,
  
    "$defs": {
      "function": {
        "type": "object",
        "properties": {   
          "qualname":  { "type": "string" },   
          "edit_type": { "enum": ["docstring", "examples", "signature"] },
          "docstring": { "type": "string" },
          "signature": { "type": "string" },
          "examples":  {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["qualname", "edit_type", "docstring", "signature", "examples"],
        "additionalProperties": false
      },
  
      "class": {
        "type": "object",
        "properties": {        
          "qualname": { "type": "string" },         
          "docstring":{ "type": "string" },
          "methods": {
            "type": "array",
            "items": { "$ref": "#/$defs/function" }
          }
        },
        "required": ["qualname", "methods", "docstring"],
        "additionalProperties": false
      }
    }
  }